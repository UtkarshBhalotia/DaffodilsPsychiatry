<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lytProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/card_shadow_light"
        android:orientation="horizontal">

        <com.daffodils.psychiatry.ui.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:padding="5dp" />

        <TextView
            android:id="@+id/image_title"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/streaming"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:textSize="15dp"
                android:text="Course Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/txt_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvModName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCourseName"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:text="Module Name"
                android:textColor="@color/txt_color"
                android:textSize="14dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvModName"
                android:paddingTop="5dp"
                android:paddingStart="20dp"
                android:textSize="14dp"
                android:text="Video Name"
                android:textColor="@color/txt_color"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>